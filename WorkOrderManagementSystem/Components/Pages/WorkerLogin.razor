@page "/worker/login"
@using System.ComponentModel.DataAnnotations
@using WorkOrderManagementSystem.Data
@using WorkOrderManagementSystem.Services
@using Microsoft.EntityFrameworkCore
@inject WorkOrderContext Db
@inject AuthService AuthService
@inject SessionService Session
@inject NavigationManager Nav
@layout WorkOrderManagementSystem.Components.Layout.PublicLayout
@rendermode InteractiveServer

<PageTitle>Worker Login</PageTitle>

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card border-0 shadow-glass animate-fade-in" style="backdrop-filter: blur(20px); background: rgba(255, 255, 255, 0.95);">
                    <div class="card-body p-5">
                        <!-- Logo/Header -->
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-primary bg-opacity-10" style="width: 80px; height: 80px;">
                                    <i class="bi bi-wrench text-primary" style="font-size: 2.5rem;"></i>
                                </div>
                            </div>
                            <h2 class="fw-bold mb-2">Worker Portal</h2>
                            <p class="text-muted">Sign in to manage your work orders</p>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger border-0 shadow-sm animate-fade-in">
                                <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
                            </div>
                        }

                        <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
                            <DataAnnotationsValidator />

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Username</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0">
                                        <i class="bi bi-person"></i>
                                    </span>
                                    <InputText @bind-Value="loginModel.Username" 
                                               class="form-control border-0 bg-light ps-2" 
                                               placeholder="Enter your username"
                                               autocomplete="username" />
                                </div>
                                <ValidationMessage For="() => loginModel.Username" class="text-danger small mt-1" />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <InputText type="password" 
                                               @bind-Value="loginModel.Password" 
                                               class="form-control border-0 bg-light ps-2" 
                                               placeholder="Enter your password"
                                               autocomplete="current-password" />
                                </div>
                                <ValidationMessage For="() => loginModel.Password" class="text-danger small mt-1" />
                            </div>

                            <button type="submit" class="btn btn-primary w-100 py-3 fw-semibold shadow-glow" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Signing in...</span>
                                }
                                else
                                {
                                    <i class="bi bi-box-arrow-in-right me-2"></i>
                                    <span>Sign In</span>
                                }
                            </button>
                        </EditForm>

                        <div class="text-center mt-4 pt-4 border-top">
                            <p class="text-muted small mb-2">
                                <i class="bi bi-info-circle me-1"></i>
                                Workers only. Need admin access?
                            </p>
                            <a href="/admin/login" class="text-decoration-none fw-semibold">
                                Go to Admin Portal â†’
                            </a>
                        </div>

                        <div class="text-center mt-3">
                            <a href="/" class="text-muted text-decoration-none small">
                                <i class="bi bi-arrow-left me-1"></i>Back to Public Portal
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Demo Credentials -->
                <div class="card border-0 shadow-sm mt-3 bg-white bg-opacity-75">
                    <div class="card-body p-3">
                        <p class="small mb-2 fw-semibold text-dark">
                            <i class="bi bi-key-fill me-2 text-warning"></i>Demo Credentials:
                        </p>
                        <p class="small mb-0 font-monospace text-muted">
                            Username: <strong class="text-dark">worker1</strong><br/>
                            Password: <strong class="text-dark">worker123</strong>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string errorMessage = "";
    private bool isLoading = false;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = "";
        StateHasChanged();

        try
        {
            await Task.Delay(500); // Simulate network delay for UX

            Console.WriteLine($"Attempting login for user: {loginModel.Username}");
            var account = await Db.WorkerAccounts
                .FirstOrDefaultAsync(w => w.Username == loginModel.Username && w.IsActive);
            Console.WriteLine($"Account found: {account != null}");

            if (account == null)
            {
                errorMessage = "Invalid username or password.";
                isLoading = false;
                return;
            }

            if (account.Role != Role.Worker)
            {
                Console.WriteLine("Role mismatch.");
                errorMessage = "This portal is for workers only. Please use the admin portal.";
                isLoading = false;
                return;
            }

            Console.WriteLine("Verifying password...");
            if (!AuthService.VerifyPassword(loginModel.Password, account.PasswordHash))
            {
                Console.WriteLine("Password verification failed.");
                errorMessage = "Invalid username or password.";
                isLoading = false;
                return;
            }

            Console.WriteLine($"Password verified. Logging in session... (Service ID: {Session.InstanceId})");
            // Login successful
            var token = AuthService.GenerateSessionToken();
            Session.Login(account, token);

            Console.WriteLine("Session logged in. Navigating to dashboard...");
            // Redirect to worker dashboard
            Nav.NavigateTo("/worker/dashboard");
        }
        catch (Exception ex)
        {
            errorMessage = $"Login failed: {ex.Message}";
            isLoading = false;
        }
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "Username is required")]
        public string Username { get; set; } = "";

        [Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = "";
    }
}
