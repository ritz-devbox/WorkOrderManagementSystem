@page "/admin/login"
@using System.ComponentModel.DataAnnotations
@using WorkOrderManagementSystem.Data
@using WorkOrderManagementSystem.Services
@using Microsoft.EntityFrameworkCore
@inject WorkOrderContext Db
@inject AuthService AuthService
@inject SessionService Session
@inject NavigationManager Nav
@layout WorkOrderManagementSystem.Components.Layout.PublicLayout
@rendermode InteractiveServer

<PageTitle>Admin Login</PageTitle>

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card border-0 shadow-glass animate-fade-in" style="backdrop-filter: blur(20px); background: rgba(255, 255, 255, 0.95);">
                    <div class="card-body p-5">
                        <!-- Logo/Header -->
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-danger bg-opacity-10" style="width: 80px; height: 80px;">
                                    <i class="bi bi-shield-fill-check text-danger" style="font-size: 2.5rem;"></i>
                                </div>
                            </div>
                            <h2 class="fw-bold mb-2">Admin Portal</h2>
                            <p class="text-muted">Administrative access only</p>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger border-0 shadow-sm animate-fade-in">
                                <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
                            </div>
                        }

                        <EditForm Model="loginModel" OnValidSubmit="HandleLogin" FormName="adminLoginForm">
                            <DataAnnotationsValidator />

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Admin Username</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0">
                                        <i class="bi bi-person-badge"></i>
                                    </span>
                                    <InputText @bind-Value="loginModel.Username" 
                                               class="form-control border-0 bg-light ps-2" 
                                               placeholder="Enter admin username"
                                               autocomplete="username" />
                                </div>
                                <ValidationMessage For="() => loginModel.Username" class="text-danger small mt-1" />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0">
                                        <i class="bi bi-shield-lock"></i>
                                    </span>
                                    <InputText type="password" 
                                               @bind-Value="loginModel.Password" 
                                               class="form-control border-0 bg-light ps-2" 
                                               placeholder="Enter admin password"
                                               autocomplete="current-password" />
                                </div>
                                <ValidationMessage For="() => loginModel.Password" class="text-danger small mt-1" />
                            </div>

                            <button type="submit" class="btn btn-danger w-100 py-3 fw-semibold shadow-glow" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Authenticating...</span>
                                }
                                else
                                {
                                    <i class="bi bi-shield-check me-2"></i>
                                    <span>Admin Sign In</span>
                                }
                            </button>
                        </EditForm>

                        <div class="text-center mt-4 pt-4 border-top">
                            <p class="text-muted small mb-2">
                                <i class="bi bi-info-circle me-1"></i>
                                Not an admin? Sign in as worker
                            </p>
                            <a href="/worker/login" class="text-decoration-none fw-semibold">
                                Go to Worker Portal â†’
                            </a>
                        </div>

                        <div class="text-center mt-3">
                            <a href="/" class="text-muted text-decoration-none small">
                                <i class="bi bi-arrow-left me-1"></i>Back to Public Portal
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Demo Credentials -->
                <div class="card border-0 shadow-sm mt-3 bg-white bg-opacity-75">
                    <div class="card-body p-3">
                        <p class="small mb-2 fw-semibold text-dark">
                            <i class="bi bi-key-fill me-2 text-danger"></i>Demo Admin Credentials:
                        </p>
                        <p class="small mb-0 font-monospace text-muted">
                            Username: <strong class="text-dark">admin</strong><br/>
                            Password: <strong class="text-dark">admin123</strong>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string errorMessage = "";
    private bool isLoading = false;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = "";
        StateHasChanged();

        try
        {
            await Task.Delay(500); // Simulate network delay for UX

            var account = await Db.WorkerAccounts
                .FirstOrDefaultAsync(w => w.Username == loginModel.Username && w.IsActive);

            if (account == null)
            {
                errorMessage = "Invalid credentials. Access denied.";
                isLoading = false;
                return;
            }

            if (account.Role != Role.Admin)
            {
                errorMessage = "Administrative access required. Please use the worker portal.";
                isLoading = false;
                return;
            }

            if (!AuthService.VerifyPassword(loginModel.Password, account.PasswordHash))
            {
                errorMessage = "Invalid credentials. Access denied.";
                isLoading = false;
                return;
            }

            // Login successful
            var token = AuthService.GenerateSessionToken();
            Session.Login(account, token);

            // Redirect to admin dashboard
            Nav.NavigateTo("/admin/dashboard");
        }
        catch (Exception ex)
        {
            errorMessage = $"Authentication failed: {ex.Message}";
            isLoading = false;
        }
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "Admin username is required")]
        public string Username { get; set; } = "";

        [Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = "";
    }
}
