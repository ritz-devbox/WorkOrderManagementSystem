@inherits LayoutComponentBase
@using WorkOrderManagementSystem.Services
@using WorkOrderManagementSystem.Data
@inject NavigationManager Nav
@inject SessionService Session

<div class="page">
    <div class="sidebar admin-sidebar">
        <div class="top-row ps-3 navbar navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/admin/dashboard">
                    <i class="bi bi-shield-lock-fill me-2"></i>Admin Portal
                </a>
            </div>
        </div>
        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="/admin/dashboard" Match="NavLinkMatch.All">
                    <span class="bi bi-speedometer2 me-2" aria-hidden="true"></span>
                    <span>Dashboard</span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="/admin/kanban">
                    <span class="bi bi-kanban me-2" aria-hidden="true"></span>
                    <span>Kanban Board</span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="/admin/orders">
                    <span class="bi bi-clipboard-data me-2" aria-hidden="true"></span>
                    <span>All Orders</span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="/admin/inspections">
                    <span class="bi bi-clipboard-check me-2" aria-hidden="true"></span>
                    <span>Inspections</span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="/admin/locations">
                    <span class="bi bi-building me-2" aria-hidden="true"></span>
                    <span>Locations</span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="/admin/categories">
                    <span class="bi bi-tags-fill me-2" aria-hidden="true"></span>
                    <span>Categories</span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="/admin/skills">
                    <span class="bi bi-award-fill me-2" aria-hidden="true"></span>
                    <span>Skills</span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="/admin/assets">
                    <span class="bi bi-qr-code me-2" aria-hidden="true"></span>
                    <span>Assets</span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="/admin/asset-health">
                    <span class="bi bi-heart-pulse-fill me-2" aria-hidden="true"></span>
                    <span>Asset Health</span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="/admin/workers">
                    <span class="bi bi-people-fill me-2" aria-hidden="true"></span>
                    <span>Manage Workers</span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="/admin/admins">
                    <span class="bi bi-shield-lock me-2" aria-hidden="true"></span>
                    <span>Manage Admins</span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="/admin/analytics">
                    <span class="bi bi-graph-up-arrow me-2" aria-hidden="true"></span>
                    <span>Analytics</span>
                </NavLink>
            </div>
        </nav>
    </div>

    <main>
        <div class="top-row px-4">
            <div class="user-profile d-flex align-items-center gap-3">
                <div class="d-flex align-items-center">
                    <div class="avatar bg-danger bg-opacity-10 text-danger rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                        <i class="bi bi-shield-fill"></i>
                    </div>
                    <div>
                        <div class="fw-bold small">@Session.CurrentUser?.FullName</div>
                        <div class="text-muted" style="font-size: 0.75rem;">Administrator</div>
                    </div>
                </div>
                <button class="btn btn-sm btn-outline-danger border-0" @onclick="Logout" title="Sign Out">
                    <i class="bi bi-box-arrow-right"></i>
                </button>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<NotificationToast />

@code {
    private void Logout()
    {
        Session.Logout();
        Nav.NavigateTo("/admin/login");
    }
}
